<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="FUNCTION GENERATOR"  Height="450" Width="800" FontFamily="Verdana" 
        Background="#FFEEFAFF" Icon="icons8-gears-80.png">
    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2" />
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <WpfPlot Name="myWpfPlot" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1"/>

        <StackPanel Grid.Column="5" Grid.Row="1" Orientation="Vertical" Grid.ColumnSpan="1" Grid.RowSpan="2" MinWidth="200">
            <Label FontWeight="Bold" Content="Signal-Wave Form" />
            <RadioButton Name="rdoSine" GroupName="waveForm" Content="Sine" Margin="5" IsChecked="True"/>
            <RadioButton Name="rdoSawt" GroupName="waveForm" Content="Sawtooth" Margin="5"/>
            <RadioButton Name="rdoRand" GroupName="waveForm" Content="Random" Margin="5"/>
            <!--<Button x:Name="btnReset" Content="Reset" Click="btnReset_Click" Margin="5" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="2"/>
                    </Style>
                </Button.Resources>
            </Button>-->
        </StackPanel>

        <Button x:Name="btnReset" Grid.Column ="5" Grid.Row="3" VerticalAlignment="Center" 
                Content="Reset" Click="btnReset_Click" Margin="5" BorderThickness="0" Height="20">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="2"/>
                    </Style>
                </Button.Resources>
            </Button>
        <DockPanel VerticalAlignment="Center" Grid.Column="5" Grid.Row="4">
            <Button x:Name="btnSimulate" Content="Simulate to DB" Margin="5" FontWeight="Bold" Height="22">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="2"/>
                    </Style>
                </Button.Resources>
            </Button>
        </DockPanel>

        <StackPanel Grid.Column="2" Grid.Row="3" Orientation="Vertical">
            <Label Content="Frequency" FontWeight="Bold"/>
            <TextBox x:Name="txtFreq" Width ="100" Margin="0,0" Height="19"/>
            <Label Content="Hz" FontSize="11" HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="3" Margin="10,0,0,0">
            <Label Content="Offset" VerticalAlignment="Bottom"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Slider x:Name="sldFreq" Minimum="0" Maximum="100" TickFrequency="5"
                    TickPlacement="BottomRight" ValueChanged="sldFreq_ValueChanged" Value="50"
                    MinWidth="300" AutoToolTipPlacement="TopLeft" Foreground="Blue"/>
                <DockPanel>
                    <Label DockPanel.Dock="Left" Content="-500 Hz" FontSize="10" HorizontalAlignment="Left"/>
                    <Label DockPanel.Dock="Right" Content="500 Hz" FontSize="10" HorizontalAlignment="Right"/>
                </DockPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="4" Orientation="Vertical">
            <Label Content="Amplitude" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBox x:Name="txtAmp" Width ="100" Margin="0,0" Height="19"/>
            <Label Content="V" FontSize="11" HorizontalAlignment="Right"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="4" Margin="10,0,0,0">
            <Label Content="Offset" VerticalAlignment="Bottom"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <Slider x:Name="sldAmp" Minimum="0" Maximum="100" TickFrequency="5"
                    TickPlacement="BottomRight" ValueChanged="sldAmp_ValueChanged" Value="50"
                    MinWidth="300" AutoToolTipPlacement="TopLeft" Foreground="Blue"/>
                <DockPanel >
                    <Label DockPanel.Dock="Left" Content="-1 V" FontSize="10" HorizontalAlignment="Left" />
                    <Label DockPanel.Dock="Right" Content="1 V" FontSize="10" HorizontalAlignment="Right" />
                </DockPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
